    <!-- PET SELECTOR -->
<form name="user-background">
    <div class="row">
      <div class="col s4 push-s1">
        <h6>Kind of Animal:</h6>
          <p><label>
             <input class="with-gap" type="radio" name="animal-group" value="cat" checked="checked"/>
             <span>Cat</span>
           </label></p>

          <p><label>
             <input class="with-gap" type="radio" name="animal-group" value="dog"/>
             <span>Dog</span>
           </label></p>

          <p><label>
             <input class="with-gap" type="radio" name="animal-group" value="bird"/>
             <span>Bird</span>
           </label></p>

          <p><label>
             <input class="with-gap" type="radio" name="animal-group" value="reptile"/>
             <span>Reptile</span>
           </label></p>

          <p><label>
             <input class="with-gap" type="radio" name="animal-group" value="smallfurry"/>
             <span>Small & Furry</span>
           </label></p>
      </div>

      <!-- CURRENT PETS -->
      <div class="col s3">
        <h6>Current Pets:</h6>
          <p><label>
             <input type="radio" class="filled-in" name="pet-group" value="cat"/>
             <span>Cat</span>
           </label></p>

          <p><label>
             <input type="radio" class="filled-in" name="pet-group" value="dog"/>
             <span>Dog</span>
           </label></p>

           <p><label>
              <input type="radio" class="filled-in" name="pet-group" value="both"/>
              <span>Both</span>
            </label></p>
      </div>

      <!-- CHILDREN IN HOME -->
      <div class="col s4">
        <h6>Children in Home:</h6>
          <p><label>
             <input type="checkbox" class="filled-in" name="child-group" value="toddlers-infants"/>
             <span>Under 7</span>
           </label></p>

          <p><label>
             <input type="checkbox" class="filled-in" name="child-group" value="young-children"/>
             <span>7-12</span>
           </label></p>

          <p><label>
            <input type="checkbox" class="filled-in" name="child-group" value="teen-children"/>
            <span>13-18</span>
          </label></p>

          <p><label>
           <input type="checkbox" class="filled-in" name="child-group" value="no-children"/>
           <span>No Children / Adults Only</span>
         </label></p>
      </div>
    </div>

    <!-- ROW TWO -->
    <div class="row">

      <!-- HOME TYPE -->
      <div class="col s4 push-s1">
        <h6>Type of Home:</h6>
          <p><label>
             <input class="with-gap" type="radio" name="home-group" value="home-wb" checked/>
             <span>House with Backyard</span>
           </label></p>

          <p><label>
             <input class="with-gap" type="radio" name="home-group" value="home-wob"/>
             <span>House without Backyard</span>
           </label></p>

          <p><label>
             <input class="with-gap" type="radio" name="home-group" value="apartment"/>
             <span>Apartment</span>
           </label></p>

          <p><label>
             <input class="with-gap" type="radio" name="home-group" value="home-other"/>
             <span>Other</span>
           </label></p>

          <p>
            <div class="input-field col s9">
              <input placeholder="Other Home Type" value="other-home" name="home-group" type="text" class="validate">
            </div>
          </p>
      </div>

      <!-- ACTIVITY LEVEL -->
      <div class="col s3">
        <h6>Level of Activity:</h6>
          <p><label>
             <input class="with-gap" type="radio" name="activity-level" value="highly-active"/>
             <span>Highly Active Daily</span>
           </label></p>

          <p><label>
             <input class="with-gap" type="radio" name="activity-level" value="active"/>
             <span>Active Daily</span>
           </label></p>

          <p><label>
             <input class="with-gap" type="radio" name="activity-level" value="moderately-active"/>
             <span>Not Very Active</span>
           </label></p>

          <p><label>
              <input class="with-gap" type="radio" name="activity-level" value="inactive"/>
              <span>Mostly Inactive</span>
            </label></p>
      </div>

      <!-- BREED TYPE -->
      <div class="col s3">
        <h6>Breed / Type:</h6>
        <div class="input-field col s12">
          <select multiple>
            <option value="" disabled selected>Choose your option</option>
            <option value="1">Option 1</option>
            <option value="2">Option 2</option>
            <option value="3">Option 3</option>
          </select>
          <label>Materialize Multiple Select</label>
        </div>
      </div>

      <div class="col s2">
        <button class="btn waves-effect waves-light" type="submit" name="action" id="submit-button">Submit
           <i class="material-icons right">Submit</i>
         </button>
      </div>
    </div>
  </form>
